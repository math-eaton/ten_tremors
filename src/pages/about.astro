---
import CollectionLayout from '../layouts/boilerplate.astro';
import ImageScatter from '../components/imageScatter.astro';
const pageTitle = 'info';
---
<style>
  div {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    max-width: 100%;
    height: 600px;
    text-align: justify;
    box-sizing: border-box;
  }
  p {
    width: 15vw;
    margin: 2%;
  }
  @media (max-width: 480px) {
    p {
      width: 40vw;
    }
  }
  p:nth-of-type(2n) {
    margin-left: 15vw;
    text-align: justify;
  }
  p:nth-of-type(2n+1) {
    margin-right: 15vw;
  }
  p:first-of-type {
    margin-left: 0;
    margin-right: 0;
  }
  p:last-of-type {
    margin-left: 0;
    margin-right: 0;
  }
  .scatter-container {
  }

  .scatter-container {
    filter: invert();
    scale: 75%;
    position: fixed;
    z-index: -1;
    width: 100%;
    max-width: 100%;
    right: 0;
    opacity: 15%;
    overflow: hidden;
  }

</style>

<html>
  <body>
    <CollectionLayout title={pageTitle}>
      <div>
        <div class="scatter-container">
          <ImageScatter alt="ten tremors logos"/>
          </div>    
        <p>Ten Tremors is a collective of experimental musicians, writers, video artists, printmakers, & computational designers.</p>
        <p>Our geographic center of mass is in New York, New York.</p>
        <p>@tentremors // tentremors at gmail dot com</p>
      </div>
    </CollectionLayout>
  </body>
</html>