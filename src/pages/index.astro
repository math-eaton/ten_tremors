---
import { getCollection } from "astro:content";

const artists = await getCollection("artists");
---

<head>
  <title>home</title>
</head>

<body class="bg-black text-white flex flex-col items-center">
  <header class="w-full bg-gray-900 text-center py-12">
    <h1 class="text-5xl font-bold">ten tremors</h1>
  </header>

  <nav class="w-full flex justify-center gap-8 my-8">
    <a href="/sound" class="text-lg font-semibold hover:underline">SOUND</a>
    <a href="/artefact" class="text-lg font-semibold hover:underline">ARTEFACT</a>
    <a href="/net" class="text-lg font-semibold hover:underline">NET</a>
  </nav>

  <section class="w-full max-w-4xl my-12">
    <h2 class="text-2xl font-bold mb-4">artists</h2>

    <ul class="grid grid-cols-2 md:grid-cols-3 gap-6">
      {artists.length > 0 ? (
        artists.map(artist => (
          <li class="p-4 bg-gray-800 rounded-lg hover:bg-gray-700">
            <a href={`/artists/${artist.id}`} class="flex flex-col items-center text-lg text-white">
              {artist.data.image && (
                <img src={artist.data.image} alt={artist.data.name} class="w-24 h-24 rounded-full mb-2"/>
              )}
              {artist.data.name}
            </a>
          </li>
        ))
      ) : (
        <p class="text-gray-400">No artists available.</p>
      )}
    </ul>
  </section>
</body>
