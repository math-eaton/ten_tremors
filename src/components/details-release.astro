---
const { release, artist } = Astro.props;
const artistName = artist ? artist.data.name : "(COMPILATION)";
const artistId = artist ? artist.id : null;
---

<h1>{release.data.title}</h1>
<img src={release.data.cover} alt={release.data.title} />

<p>
  {artist ? <a href={`/artists/${artistId}`}>{artistName}</a> : artistName}
</p>
