---
const { artefact, release } = Astro.props;
---

<h1>{artefact.data.item}</h1>
<img src={artefact.data.image} alt={artefact.data.item} />

{release && (
  <p>Associated with: <a href={`/releases/{release.id}`}>{release.data.title}</a></p>
)}

<p>Format: {artefact.data.format}</p>
<p>Price: ${artefact.data.price.toFixed(2)}</p>
<p>Stock: {artefact.data.stock} available</p>

{artefact.data.sizeOptions && (
  <>
    <h2>Available Sizes</h2>
    <ul>
      {artefact.data.sizeOptions.map((size: string) => <li>{size}</li>)}
    </ul>
  </>
)}
