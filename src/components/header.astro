---
import { Icon } from 'astro-icon/components'

const currentPath = new URL(Astro.request.url).pathname;
---

<style>
/* header {
} */

ul {
    display: flex;
    flex-direction: column;
    justify-content: left;
    list-style-type: none;
}

a {
    /* padding: 0.5rem;
    margin: -0.25rem; */
}

/* div{
} */

[data-icon] {
    /* color: black; */
    /* filter: invert() drop-shadow(0 0 0.75rem rgb(255, 255, 255)); */
    mix-blend-mode: hard-light;
    margin-bottom: 1vh;
}
</style>

<header class="bookend">
    <div>
        <ul>
            <a href="/"><Icon name="eyeLogo" /></a>
            {currentPath !== '/releases/' && <a href="/releases/">releases</a>}
            {currentPath !== '/about/' && <a href="/about/">info</a>}
            {currentPath !== '/projects/' && <a href="/projects/">projects</a>}
            {currentPath !== '/calendar/' && <a href="/calendar/">calendar</a>}
            {(currentPath === '/releases/' || currentPath === '/about/' || currentPath === '/projects/' || currentPath === '/calendar/') && (
                <li><a href="javascript:history.back()" style="padding-right: 100%;">&#10176</a></li>
            )}
        </ul>

        <!-- 8527 -->
    </div>
</header>